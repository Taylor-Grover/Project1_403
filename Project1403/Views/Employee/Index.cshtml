@model Project1403.Models.Employee

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<body>
    <div class="jumbotron">
        <div class="container">
            <!--Create the HTML Form-->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <p>First Name: @Html.TextBoxFor(x => x.firstName)</p>

                <p>Last Name: @Html.TextBoxFor(x => x.lastName)</p>

                <p>Phone Number: @Html.TextBoxFor(x => x.phone)</p>

                <p>Confirm jobType: @Html.TextBoxFor(x => x.jobType)</p>
                <p>Confirm Subcontractor: @Html.TextBoxFor(x => x.subcontractor)</p>

                <!--Create the Drop Down Lists-->
                <p>
                    Project Location:  @Html.DropDownListFor(x => x.location, new[] {
new SelectListItem()
{Text = "Project 001 - UVU Campus", Value = "1"},
new SelectListItem()
{Text = "Project 2 - Arbys", Value = "2"},
new SelectListItem()
{Text = "Project 3 - Sushi YA", Value = "3"} }, "Choose an option")
                </p>

                <input type="submit" value="Submit" />
            }
        </div>
    </div>
</body>
